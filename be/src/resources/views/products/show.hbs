<!-- Vùng nền full width -->
<div style="background-color: #929fba; padding: 2rem 0;">
<h1 class="mb-4 text-center" style="font-size: 3rem;">Danh sách sản phẩm</h1>

<div class="row">
  {{#each products}}
    <div class="col-md-3 mb-4">
      <div class="card" style="width: 20rem;">
        <a href="/products/{{this.slug}}">
        <div class="card-img-container" style="height: 150px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
            <img src="{{this.img}}" alt="{{this.name}}" style="max-height: 100%; max-width: 100%;">
            </div>
        </a>
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">Giá: {{this.price}}</p>
          <a href="#" class="btn btn-primary">Mua ngay</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>
</div>
