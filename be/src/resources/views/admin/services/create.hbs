<div class="container admin-dashboard mt-4">
  <h2>Thêm dịch vụ mới</h2>
  <form action="/admin/services/create" method="POST" class="mt-4">
    <div class="mb-3">
      <label for="name" class="form-label">Tên dịch vụ</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Mô tả</label>
      <input type="text" class="form-control" id="description" name="description">
    </div>
    <div class="mb-3">
      <label for="duration" class="form-label">Thời gian</label>
      <input type="text" class="form-control" id="duration" name="duration">
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Giá (VNĐ)</label>
      <input type="number" class="form-control" id="price" name="price" required min="0">
    </div>
    <button type="submit" class="btn btn-success">Thêm mới</button>
    <a href="/admin/services" class="btn btn-secondary ms-2">Quay lại</a>
  </form>
</div> 