<div class="container mt-4">
  <h2>Chi tiết liên hệ</h2>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">Họ tên: {{contact.name}}</h5>
      <p class="card-text">Email: {{contact.email}}</p>
      <p class="card-text">Nội dung: {{contact.message}}</p>
      <p class="card-text">Ngày gửi: {{contact.createdAt}}</p>
      <hr>
      <h5>Phản hồi của admin:</h5>
      {{#if contact.adminReply}}
        <div class="alert alert-success">{{contact.adminReply}}</div>
      {{else}}
        <form method="POST" action="/admin/contacts/{{contact._id}}/reply">
          <div class="mb-3">
            <textarea class="form-control" name="reply" rows="3" placeholder="Nhập phản hồi..."></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Gửi phản hồi</button>
        </form>
      {{/if}}
    </div>
  </div>
  <a href="/admin/contacts" class="btn btn-secondary">Quay lại danh sách</a>
</div> 