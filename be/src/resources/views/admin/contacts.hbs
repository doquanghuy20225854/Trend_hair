<div class="container mt-4">
  <h2>Danh sách liên hệ</h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Họ tên</th>
        <th>Email</th>
        <th>Ngày gửi</th>
        <th>Trạng thái</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      {{#each contacts}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.createdAt}}</td>
        <td>{{#if this.adminReply}}Đã trả lời{{else}}Chưa trả lời{{/if}}</td>
        <td>
          <a href="/admin/contacts/{{this._id}}" class="btn btn-info btn-sm">Xem chi tiết</a>
          {{#unless this.adminReply}}
            <a href="/admin/contacts/{{this._id}}" class="btn btn-success btn-sm ms-2">Trả lời</a>
          {{/unless}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div> 